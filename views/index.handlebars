<link rel="icon" href="data:;base64,iVBORw0KGgo=">

<div class="container">
    <div class="jumbotron jumbotron-fluid">
        <div class="row">
            <div class="col-3">
                <img src="/assets/img/clipart1434379.png" class="img-fluid" alt="spongebob" style="max-height: 200px">
            </div>
            <div class="col-5">
                <h1>BURGER TIME</h1>
                <p class="spongeText">This sponge is looking to try new types of burgers. You can eat burgers, bring
                    back
                    burgers that have
                    previously been eaten or add your own custom burgers!</p>
            </div>
            <div class="col-3">
                <h2>ADD A BURGER</h2>
                <form class="create-form">

                    <div class="form-group">
                        <label for="Bur">Burger Name:</label>
                        <input type="text" id="newBurger" name="name">
                    </div>

                    <button type="submit" class="rounded-pill">Add Burger</button>
                </form>
            </div>
        </div>
    </div>
    <div class="card-group d-flex align-items-stretch">
        {{!-- <div class="col-lg-6 d-flex align-items-stretch"> --}}
            <div class="card p-2" style="width: 20rem;">
                <div class="card-header">
                    <h2 class="text-center spongeText">AVAILABLE</h2>
                </div>
                <ul class="list-group list-group-flush text-left">
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devour=false}}
                    {{/unless}}
                    {{/each}}
                </ul>
                {{!--
            </div> --}}
        </div>

        {{!-- <div class="col-lg-6 d-flex align-items-stretch"> --}}
            <div class="card p-2" style="width: 20rem;">
                <div class="card-header">
                    <h2 class="spongeText text-center">UNAVAILABLE</h2>
                </div>
                <ul class="list-group list-group-flush text-right">
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block devour=true}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>